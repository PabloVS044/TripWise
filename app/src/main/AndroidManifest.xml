<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos para Google Maps -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/logotripwise"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logotripwise"
        android:supportsRtl="true"
        android:theme="@style/Theme.TripWise"
        tools:targetApi="31">

        
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
        
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.TripWise">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".admin.UsersActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise" />

        <activity
            android:name=".admin.PropertiesActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise" />

        <activity
            android:name=".admin.DashboardActivity"
            android:exported="false" />

        <activity
            android:name=".discover.DiscoverActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise" />
        <activity
            android:name=".auth.LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise" />

        <activity
            android:name=".auth.RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise" />

        <activity
            android:name=".auth.ForgotPasswordActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise" />

        <activity
            android:name=".user.MainUserActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"/>
        <activity
            android:name=".host.MainHostActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"/>
        <activity
            android:name=".reservation.ReservationPage1Activity"
            tools:ignore="MissingClass" />

        <activity
            android:name=".reservation.ReservationPage2Activity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"
            tools:ignore="MissingClass" />

        <activity
            android:name=".reservation.ReservationPage3Activity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"
            tools:ignore="MissingClass" />

        <activity
            android:name=".reservation.MyReservationsActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"
            tools:ignore="MissingClass" />

        <activity
            android:name=".host.PropertiesHostActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"/>

        <activity
            android:name=".admin.UserDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"/>

        <activity
            android:name=".admin.PropertyDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"/>

        <activity
            android:name=".itinerary.ItineraryActivity"
            android:exported="false"
            android:theme="@style/Theme.TripWise"/>

        <activity
            android:name=".profile.ProfileActivity"
            android:exported="false" />

    </application>


</manifest>
